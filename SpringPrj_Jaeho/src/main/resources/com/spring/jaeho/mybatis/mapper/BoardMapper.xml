<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.jaeho.mybatis.mapper.BoardMapper">
	<!-- 게시판 추가하기 -->
	<insert id="insertBoard" parameterType="BoardDTO">
		INSERT INTO board
		(b_title,b_writer,b_detail,b_date)
		VALUES(#{b_title},#{b_writer},#{b_detail},SYSDATE())
	</insert>
	<!--게시판 리스트 출력 -->
	<select id="listBoard" resultType="BoardDTO">
		SELECT * FROM board ORDER BY b_no DESC

	</select>
	<!-- 게시판 상세보기 -->
	<select id="detailBoard" resultType="BoardDTO">
		SELECT * FROM board WHERE
		b_no = #{b_no}
	</select>
	<!--게시글 삭제 -->
	<delete id="delete">
		DELETE
		FROM board
		WHERE b_no=#{b_no}
	</delete>
	<!--게시글 수정 -->
	<update id="update">
		UPDATE board SET b_title =#{b_title},
		b_detail = #{b_detail},
		b_writer=#{b_writer},
		b_date = now()
		WHERE b_no = #{b_no};
	</update>
	<!-- 조회수 증가 -->
	<update id="updateCount" parameterType="int">
		UPDATE board SET b_count = b_count+1
		WHERE b_no = #{b_no}
	</update>


	<!--sql code 조각 -->
	<!--반복되는 sql의 일부를 sql태그를 이용하여 따로 빼둘 수 있다 -->
	<sql id="search">
		<choose>
			<!-- 검색옵션이 전체 검색 일 경우 -->
           <when test="searchOption == 'all' ">
             WHERE writer like '%'||#{keyword}||'%'
             OR content 
           
           </when>
		</choose>

	</sql>

</mapper>